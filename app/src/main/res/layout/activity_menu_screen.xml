<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="batuhan.qm._3_MenuScreen"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="148dp"
            android:visibility="visible"
            app:srcCompat="@drawable/questionman" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:text="QUESTION MARK"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />
    </LinearLayout>

    <Button
        android:text="MULTI PLAYER"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/multiplayer"
        android:onClick="@android:string/ok"
        android:background="#22718e"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView2"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/singleplayer"
        android:layout_toStartOf="@+id/singleplayer" />

    <Button
        android:text="QUIZ MAKER"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/quizmaker"
        android:layout_marginTop="18dp"
        android:onClick="@android:string/ok"
        android:layout_below="@+id/multiplayer"
        android:layout_alignStart="@+id/multiplayer"
        android:background="#22718e"
        android:textColor="#FFFFFF"/>

    <Button
        android:text="SINGLE PLAYER"
        android:id="@+id/singleplayer"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_marginEnd="38dp"
        android:onClick="@android:string/ok"
        android:layout_above="@+id/multiplayer"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:background="#22718e"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/star_big_on"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/multiplayer"
        android:layout_alignStart="@+id/imageView2" />

    <Button
        android:text="SETTINGS"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:id="@+id/settings"
        android:onClick="@android:string/ok"
        android:layout_below="@+id/profile"
        android:layout_alignStart="@+id/profile"
        android:background="#22718e"
        android:textColor="#FFFFFF"/>

    <Button
        android:text="PROFILE"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/profile"
        android:onClick="@android:string/ok"
        android:layout_below="@+id/quizmaker"
        android:layout_alignStart="@+id/quizmaker"
        android:layout_marginTop="12dp"
        android:background="#22718e"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_delete"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/quizmaker"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/profile"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_manage"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/settings"
        android:layout_alignStart="@+id/imageView6" />

</RelativeLayout>

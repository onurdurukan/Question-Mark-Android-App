<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="batuhan.qm._B_QuestionScreen"
    android:background="@drawable/background">

    <Button
        android:id="@+id/answer1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:onClick="yes"
        tools:clickable="true"
        android:layout_above="@+id/answer2"
        android:layout_centerHorizontal="true"
        android:background="#e2faf3"/>

    <Button
        android:id="@+id/answer3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="11dp"
        android:onClick="no"
        tools:clickable="true"
        android:layout_above="@+id/answer4"
        android:layout_alignStart="@+id/answer2"
        android:background="#e2faf3"/>

    <Button
        android:id="@+id/answer4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/answer3"
        android:layout_marginBottom="19dp"
        android:onClick="No"
        tools:clickable="true"
        android:background="#e2faf3"/>

    <Button
        android:id="@+id/answer2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="17dp"
        android:onClick="no"
        tools:clickable="true"
        android:layout_above="@+id/answer3"
        android:layout_alignStart="@+id/answer1"
        android:background="#e2faf3"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="550dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:text="   GET READY FOR THE QUESTION !"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_light" />

</RelativeLayout>

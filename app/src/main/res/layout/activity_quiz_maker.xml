<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="batuhan.qm._2_SignUpScreen"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:id="@+id/qmview"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_above="@+id/imageView8"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.45"
            android:text="   QUESTION MARK "
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <EditText
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="Write your question"
            android:inputType="textCapWords"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="Write first choice"
            android:inputType="textCapWords"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="Write second choice"
            android:inputType="textCapWords"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="Write third choice"
            android:inputType="textCapWords"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="Write fourth choice"
            android:inputType="textCapWords"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/correctans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="Write the correct choice again"
            android:inputType="textCapWords"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:elevation="0dp"
            android:onClick="onClick (SignUpScreen)"
            android:text="SUBMIT" />

    </LinearLayout>
</RelativeLayout>
